PORT=5000
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/planb
JWT_SECRET=supersecretkeychangeme
NODE_ENV=development
MONGO_DEBUG=false
# Single frontend origin (production)
FRONTEND_URL=http://localhost:5173
# Multiple origins (comma separated). Takes precedence over FRONTEND_URL.
# FRONTEND_URLS=https://taller-front-two.vercel.app,https://your-custom-domain.com
API_BASE_URL=http://localhost:5000

# Agenda (jobs)
AGENDA_ENABLED=true
AGENDA_MAINTENANCE_CRON="0 9 * * *"
AGENDA_TZ="America/Argentina/Buenos_Aires"

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASS=apppassword
EMAIL_FROM="Plan B Taller <no-reply@planb.com>"

# Cloudinary (Images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Cron Security
CRON_SECRET=cronsecretkey

# Error Alerts
ERROR_ALERT_EMAIL=jorge.ema.dominguez@gmail.com

# Frontend URL for emails
APP_BASE_URL=http://localhost:5173
